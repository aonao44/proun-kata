# wav2vec2 phoneme backend configuration
PHONEME_BACKEND=w2v2
PHONEME_MODEL_ID=facebook/wav2vec2-lv-60-espeak-cv-ft
PHONEME_MODEL_REVISION=REPLACE_WITH_COMMIT_SHA
PHONEME_DEVICE=auto
CHUNK_MS=320
CHUNK_OVERLAP=0.5
CONF_THRESHOLD=0.30
MIN_PHONE_MS=40
READING_STYLE=balanced
LONG_VOWEL_LEVEL=1
SOKUON_LEVEL=1
R_COLORING=0
HF_HOME=.hf-cache

# FastAPI runtime settings
UVICORN_HOST=0.0.0.0
UVICORN_PORT=8000
LOG_LEVEL=info
